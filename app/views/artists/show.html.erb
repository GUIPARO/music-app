<div style="display:flex;position: absolute;">
  <div style="width: 50%;">
  <h2><%= @artist.name.upcase %></h2>
    <h3> Albums (<%= @artist.albums.count %>)</h3>
    <div>
    <% @artist.albums.each do |album| %>
      <div class="card">
        <img src=<%= album.image_url  %> alt=<%= album.name %>, style="width: 150px;">
        <div class="card-body">
          <h5 class="card-title text-center"><%= album.name.upcase %></h5>
          <p> <%= album.released_at.year %></p>
        </div>
        </div>
    <% end %>
    </div>
  </div>        
  <div style="position: relative;left: 63px;width: 50%;">
    <img src=<%= @artist.image_url %> alt=<%= @artist.name %> style="width: 70%;border-radius: 5px;">
  </div>
</div>